<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/head') %>
    </head>
    <body>
        <%- include('./partials/header') %>
        
        <div class="container-fluid" id="body">
			<div class="container">
				<%- include('./partials/navigation')  %> 
				<div class="row settings-container">
					<div class="col-md-12">
						<% if(userProfile.userId.equals(user._id)){ %> 
						<div class="row">
							<div class="col-12 mt-4">
									<a class="custom-link mt-4" href="/user/editProfile">>Edit Profile</a>
							</div>
						</div>
						<% } %> 
						<div class="row">
							<div class="col-md-2 col-6">
								<img class="p-0 py-4" src="/uploads/user/<%= userProfile.profilePicture %>">
							</div>
							<div class="col-md-10 col-6">
								<h2 class="py-4"><%= userProfile.name %> </h2>
							</div>
						</div>
						<hr class="blue-line-hr">
						<div class="row">
							<div class="col-12">
								<h5>Interests</h5>
								<p><%= userProfile.interestedIn %></p>
							</div>
						</div>
						<hr class="blue-line-hr">
						<div class="row">
							<div class="col-12">
								<h5>Bio</h5>
								<p><%= userProfile.bio %></p>
							</div>
						</div>
					</div>
				</div>
			</div>
        </div>
        
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
        <script type="text/javascript" src="../public/script.js"></script>
    </body>
</html>