<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head') %>
</head>
<body class="container">

<header>
    <%- include ('./partials/header') %>
</header>

<main>
    <div class="container">
        <div class="row justify-content-md-center">
            <form action="/user/createProfile" method="post">
                <div class="form-group">
                  <div class="row">
                    <label for="name">name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="" aria-describedby="helpId">
                  </div>
                  <div class="row">
                    <label for="interestedIn">interests</label>
                    <input type="interestedIn" name="interestedIn" id="interestedIn" class="form-control" placeholder="" aria-describedby="helpId">
                  </div>
                  <div class="row">
                    <label for="bio">bio</label>
                    <input type="bio" name="bio" id="bio" class="form-control" placeholder="" aria-describedby="helpId">
                  </div>
                  <div class="row">
                      <button type="submit" class="btn btn-custom mt-5">Submit</button>
                  </div>
                </div>
            </form>
        </div>
    </div>
</main>

<footer>
    <%- include ('./partials/footer') %>
</footer>

</body>
</html>