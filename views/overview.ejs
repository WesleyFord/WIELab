<!doctype html>
<html lang="en">
	<head>
		<%- include('./partials/head')  %> 
	</head>
	<body class="overview-page page">

		<%- include('./partials/header', {profile: user.profile})  %> 

		<div class="container-fluid" id="body">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<nav class="navbar navbar-expand-sm bg-light justify-content-center sticky-top">
							<ul class="navbar-nav">
								<li class="nav-item">
									<a class="nav-link" href="#">Category 1</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="#">Category 2</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="#">Category 3</a>
								</li>
							</ul>
						</nav>
					</div>
                </div>
                <% for (const post in posts){ %>
                    <a href="/post/<%= posts[post]._id %>"  target="_blank">
					<div class="row blog-teaser">
						<div class="col-md-8">
							<h2 class="blog-hl"><%=posts[post].header%></h2>
							<p>
								<%=posts[post].text%>
							</p>
						</div>
						<div class="col-md-4">
							<img class="blog-img" src="code.jpg">
						</div>
					</div>
                </a>
                <% } %>
			</div>
		</div>
	</body>
</html>
	