		<div id="regpage" class="modal">
			<div class="modal-dialog modal-dialog-centered">
				<form class="modal-content animate" method="POST" action="/register">
					<div class="row mx-auto my-4">
						<h1>Register</h1>
					</div>
					<div class="row mx-auto my-4">
						<input type="text" name="username" id="username" placeholder="username">
					</div>
					<div class="row mx-auto my-4">
						<input type="email" name="email" id="email" placeholder="email">
					</div>
					<div class="row mx-auto my-4">
						<input type="password" name="password" id="password" placeholder="password">
					</div>	
					<div class="row mx-auto my-4">
						<button class="btn btn-primary">Sign up!</button>
					</div>
				</form>
			</div>
		</div>

		<div id="loginpage" class="modal">
			<div class="modal-dialog modal-dialog-centered">
				<form class="modal-content animate" method="POST" action="/login">
					<div class="row mx-auto my-4">
						<h1>Log In</h1>
					</div>
					<div class="row mx-auto my-4">
						<input type="text" name="username" id="username" placeholder="username">
					</div>
					<div class="row mx-auto my-4">
						<input type="password" name="password" id="password" placeholder="password">
					</div>
					<div class="row mx-auto my-4">
						<button class="btn btn-primary">Log In</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	<script>
			var regmodal = document.getElementById('regpage');
			var loginmodal = document.getElementById('loginpage');

			window.onclick = function(event) {
				if (event.target == regmodal) {
					regmodal.style.display = 'none';
				}
				if (event.target == loginmodal) {
					loginmodal.style.display = 'none';
				}
			}
		</script>
</body>
</html>
